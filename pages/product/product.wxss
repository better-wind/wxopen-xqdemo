.page{
  padding-bottom: 40px;
}
.product-banner{
  height: 450rpx;
  border-bottom: 1rpx solid #EEE;
}
.product-title-favor view{
  margin:0;
  width: 200rpx;
  height:30px;
  padding-left: 30rpx;
  line-height: 30px;
  font-size: 15px;
}
.product-title-favor view span{
  display: inline-block;
  vertical-align: top;
  width: 30px;
  height: 30px;
  background-color: #000;
}
.product-title-favor view span.favor{
  background: url('http://www.xiangqu.com/build/wap/detail/160113/images/btn_like_big@3x.png') no-repeat;
  background-size: contain;
}
.product-title-favor view span.notfavor{
  background: url('http://www.xiangqu.com/build/wap/detail/160113/images/btn_unlike_big@3x.png') no-repeat;
  background-size: contain;
}
.product-server{
  font-size: 12px;
  line-height: 40px;
  border-top:1rpx solid #EEE;
}
.product-server text{
  margin:0 10px;
}
.brand-image image{
  width: 50rpx;
  height: 50rpx;
  border:1rpx solid #000;
}
.brand-detail{
  line-height: 15px;
}
.detail-title{
  font-size: 14px;
  line-height: 20px;
  border-bottom: 1rpx solid #AAA;
}
.detail-image{
  height: 200px;
  border:1rpx solid #EEE;
}
.sku-view{
  width: 750rpx;
  height: 200px;
  border-top:1rpx solid #000;
  background-color: rgb(255,255,255);
}
.sku-item {
  padding: 15px 0;
}
.sku-item span{
  display: inline-block;
  height: 20px;
  margin:0 10px;
  padding: 0 5px;
  line-height: 20px;
  font-size: 13px;
  background-color: #eee;
}
.sku-item span.select{
  background-color: #000;
  color:#FFF;
}
.hide-view{
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.3);
}
.menu-view{
  width: 750rpx;
  height: 40px;
  border-top:1rpx solid #000;
}
.menu-view button{
  display: inline-block;
  width: 50%;
}
